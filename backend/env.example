# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/criticality
# For production: mongodb+srv://username:password@cluster.mongodb.net/criticality

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Admin Configuration
ADMIN_EMAIL=admin@criticality-stem.com
ADMIN_DASHBOARD_URL=http://localhost:3000/admin

# Booking Configuration
BOOKING_URL=http://localhost:3000/contact

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# External Services (optional)
GOOGLE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
GOOGLE_RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Payment Processing (if needed)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log 